<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<object id="window" class="GtkWindow">
		<property name="visible">True</property>
		<property name="title">Temperature Converter</property>
		<property name="border-width">10</property>
		<child>
			<object id="grid" class="GtkGrid">
				<property name="visible">True</property>
				<child>
					<object id="celsius" class="GtkEntry">
						<property name="visible">True</property>
					</object>
					<packing>
            			<property name="left-attach">0</property>
            			<property name="top-attach">0</property>
						<property name="width">2</property>
          			</packing>
				</child>
				<child>
					<object id="C" class="GtkLabel">
						<property name="visible">True</property>
						<property name='label'>℃</property>
					</object>
					<packing>
            			<property name="left-attach">3</property>
            			<property name="top-attach">0</property>
          			</packing>
				</child>
				<child>
					<object id="fahrenheit" class="GtkEntry">
						<property name="visible">True</property>
					</object>
					<packing>
            			<property name="left-attach">0</property>
            			<property name="top-attach">2</property>
						<property name="width">2</property>
          			</packing>
				</child>
				<child>
					<object id="F" class="GtkLabel">
						<property name="visible">True</property>
						<property name='label'>℉</property>
					</object>
					<packing>
            			<property name="left-attach">3</property>
            			<property name="top-attach">2</property>
          			</packing>
				</child>
				<child>
					<object id="CtoF" class="GtkButton">
						<property name="visible">True</property>
						<property name="label">↓</property>
					</object>
					<packing>
						<property name="left-attach">0</property>
						<property name="top-attach">1</property>
					</packing>
				</child>
				<child>
					<object id="FtoC" class="GtkButton">
						<property name="visible">True</property>
						<property name="label">↑</property>
					</object>
					<packing>
						<property name="left-attach">1</property>
						<property name="top-attach">1</property>
					</packing>
				</child>
				<child>
					<object id="quit" class="GtkButton">
						<property name="visible">True</property>
						<property name="label">Quit</property>
					</object>
					<packing>
						<property name="left-attach">0</property>
						<property name="top-attach">3</property>
						<property name="width">2</property>
					</packing>
				</child>
			</object>
		</child>
	</object>
</interface>
